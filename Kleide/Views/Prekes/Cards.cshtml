@model IEnumerable<Kleide.Models.Preke>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-action="Create">Visos Prekės</a>
</p>


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="@item.Nuotrauka" alt="foto">
                <div class="caption">
                    <h3>@item.Pavadinimas</h3>
                    <p>@item.Aprasymas</p>
                    <p>@item.Kaina €</p>
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.IdPreke">Keisti</a>
                        <a class="btn btn-success" asp-action="Delete" asp-route-id="@item.IdPreke">Šalinti</a>
                    }
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.IdPreke">Informacija</a>
                    <a class="btn btn-success" asp-action="../pirkimas/create" asp-route-id="@item.IdPreke">Pirkti</a>
                    <a class="btn btn-success" asp-action="../nuomas/create" asp-route-id="@item.IdPreke">Nuomotis</a>
                </div>
            </div>

        </div>
    }
</div>
